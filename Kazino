<script>
function hash(text){return btoa(unescape(encodeURIComponent(text)));}
const ADMIN_EMAIL='pubgmobile20120110@gmail.com';
const ADMIN_PASS='20121024';

// Switch login/register
document.getElementById('loginBtn').addEventListener('click', login);
document.getElementById('regBtn').addEventListener('click', register);
document.getElementById('toRegister').addEventListener('click', ()=>{loginCard.classList.add('hidden');registerCard.classList.remove('hidden');});
document.getElementById('toLogin').addEventListener('click', ()=>{registerCard.classList.add('hidden');loginCard.classList.remove('hidden');});

// Tabs
const tabs=document.querySelectorAll('.tabs button');
tabs.forEach(tab=>tab.addEventListener('click',()=>{
  tabs.forEach(t=>t.classList.remove('active'));
  tab.classList.add('active');
  document.querySelectorAll('.tab-content .section').forEach(s=>s.classList.add('hidden'));
  document.getElementById(tab.dataset.tab).classList.remove('hidden');
}));

// Register
function register(){
  if(!regEmail.value||!regPassword.value){alert('Hamma joyni to\'ldir');return;}
  const user={name:regName.value,surname:regSurname.value,phone:regPhone.value,email:regEmail.value,password:hash(regPassword.value),balance:0};
  localStorage.setItem('user',JSON.stringify(user));
  alert('Ro\'yxatdan o\'tildi!');
  registerCard.classList.add('hidden');loginCard.classList.remove('hidden');
}

// Login
function login(){
  const saved=JSON.parse(localStorage.getItem('user'));
  
  // Admin
  if(loginEmail.value===ADMIN_EMAIL && loginPassword.value===ADMIN_PASS){
    document.getElementById('adminPanel').classList.remove('hidden');
    loginCard.classList.add('hidden');
    registerCard.classList.add('hidden');
    document.getElementById('userPanel').classList.add('hidden');
    document.querySelector('.tabs').classList.add('hidden');
    return;
  }

  // User
  if(!saved){alert('Avval ro\'yxatdan o\'ting');return;}
  if(loginEmail.value===saved.email && hash(loginPassword.value)===saved.password){
    showUserPanel(saved);
  } else {alert('Gmail yoki parol noto‘g‘ri');}
}

function showUserPanel(user){
  loginCard.classList.add('hidden');
  registerCard.classList.add('hidden');
  document.getElementById('userPanel').classList.remove('hidden');
  document.querySelector('.tabs').classList.remove('hidden');
  document.getElementById('userName').innerText=user.name;
  document.getElementById('profName').innerText=user.name;
  document.getElementById('profSurname').innerText=user.surname;
  document.getElementById('profPhone').innerText=user.phone;
  document.getElementById('profEmail').innerText=user.email;
  document.getElementById('userBalance').innerText=user.balance;
}

// Animated Game
function playAnimatedGame(game){
  const saved=JSON.parse(localStorage.getItem('user'));
  if(saved.balance<4000){alert('Balans yetarli emas'); return;}
  saved.balance-=4000;
  document.getElementById('userBalance').innerText=saved.balance;
  const slotResult=document.getElementById('slotResult');
  slotResult.innerHTML="O‘yin boshlanmoqda...";
  setTimeout(()=>{
    const rand=Math.random()*100;
    let prize=0;
    if(rand<1){prize=20000;}
    else if(rand<4){prize=10000;}
    else if(rand<14){prize=4000;}
    else if(rand<64){prize=1000;}
    else{prize=0;}
    saved.balance+=prize;
    localStorage.setItem('user',JSON.stringify(saved));
    document.getElementById('userBalance').innerText=saved.balance;
    slotResult.innerHTML=`${game} o‘yinida yutuq: <b>${prize} so'm</b>`;
  },1000);
}

// Withdraw/Deposit Demo
function requestWithdraw(){
  const amount=parseInt(document.getElementById('withdrawAmount').value);
  const card=document.getElementById('withdrawCard').value;
  const user=JSON.parse(localStorage.getItem('user'));
  if(!amount||!card){alert("Hamma maydonni to‘ldiring");return;}
  if(amount<20000){alert("Minimal 20000 so'm");return;}
  if(user.balance<amount){alert("Balans yetarli emas");return;}
  const withdrawRequest={email:user.email,name:user.name,amount:amount,card:card,status:"Kutilmoqda"};
  localStorage.setItem("withdrawRequest",JSON.stringify(withdrawRequest));
  document.getElementById("withdrawStatus").innerText="So‘rov yuborildi, admin tekshiradi";
}

function requestDeposit(){
  const amount=parseInt(document.getElementById('depositAmount').value);
  const card=document.getElementById('depositCard').value;
  const user=JSON.parse(localStorage.getItem('user'));
  if(!amount||!card){alert("Hamma maydonni to‘ldiring");return;}
  if(amount<4000){alert("Minimal 4000 so'm");return;}
  const depositRequest={email:user.email,name:user.name,amount:amount,card:card,status:"Kutilmoqda",time:new Date().toLocaleString()};
  localStorage.setItem("depositRequest",JSON.stringify(depositRequest));
  document.getElementById("depositStatus").innerText="So‘rov yuborildi, admin tekshiradi ("+depositRequest.time+")";
}

// Admin DEMO functions
function checkDeposit(){
  const req=JSON.parse(localStorage.getItem("depositRequest"));
  if(!req){alert("So‘rov yo‘q");return;}
  document.getElementById("adminDeposit").innerHTML=`
    <p>Foydalanuvchi: ${req.name}</p>
    <p>Email: ${req.email}</p>
    <p>Summa: ${req.amount} so'm</p>
    <p>Karta: ${req.card}</p>
    <p>Vaqt: ${req.time}</p>
    <button onclick="approveDeposit()">Tasdiqlash</button>
  `;
}

function approveDeposit(){
  const req=JSON.parse(localStorage.getItem("depositRequest"));
  const user=JSON.parse(localStorage.getItem('user'));
  user.balance+=req.amount;
  localStorage.setItem("user",JSON.stringify(user));
  localStorage.removeItem("depositRequest");
  alert("Pul hisobga tushdi (DEMO)");
}

function checkWithdraw(){
  const req=JSON.parse(localStorage.getItem("withdrawRequest"));
  if(!req){alert("So‘rov yo‘q");return;}
  document.getElementById("adminWithdraw").innerHTML=`
    <p>Foydalanuvchi: ${req.name}</p>
    <p>Email: ${req.email}</p>
    <p>Summa: ${req.amount} so'm</p>
    <p>Karta: ${req.card}</p>
    <button onclick="approveWithdraw()">To‘lov qilindi</button>
  `;
}

function approveWithdraw(){
  const req=JSON.parse(localStorage.getItem("withdrawRequest"));
  const user=JSON.parse(localStorage.getItem('user'));
  user.balance-=req.amount;
  localStorage.setItem("user",JSON.stringify(user));
  localStorage.removeItem("withdrawRequest");
  alert("To‘lov tasdiqlandi (DEMO)");
}

// Settings & logout
function editProfile(){
  const user=JSON.parse(localStorage.getItem('user'));
  const newName=prompt("Ism:",user.name);
  const newSurname=prompt("Familiya:",user.surname);
  const newPhone=prompt("Telefon:",user.phone);
  if(newName) user.name=newName;
  if(newSurname) user.surname=newSurname;
  if(newPhone) user.phone=newPhone;
  localStorage.setItem('user',JSON.stringify(user));
  showUserPanel(user);
}

function logout(){alert("Akkountdan chiqildi");location.reload();}
</script>
</body>
</html>
